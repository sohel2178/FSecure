<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/large_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin">

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding">

                <TextView
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="DHK-GA-11-12233"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/indicator"
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/red_car" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_marginTop="@dimen/medium_padding">

                <FrameLayout
                    android:id="@+id/ttt"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/at"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center"
                        android:layout_marginStart="59dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/ripple"
                        android:src="@drawable/command"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/driver_phone"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="-53dp"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_call"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/edit"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center"
                        android:layout_marginStart="-42dp"
                        android:layout_marginTop="-42dp"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center"
                        android:layout_marginStart="-53dp"
                        android:layout_marginTop="27dp"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_share"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/share_user"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="59dp"
                        android:background="@drawable/ripple"
                        android:src="@drawable/ic_group"
                        android:tint="@color/white" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/driver_image"
                        android:layout_width="@dimen/driver_image_size"
                        android:layout_height="@dimen/driver_image_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_profile" />

                </FrameLayout>


                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ttt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/small_padding"
                    android:text="@string/driver_name"
                    android:textAlignment="center"
                    android:textColor="#670c02"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/current_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/driver_name"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="@dimen/medium_padding"
                    android:drawableStart="@drawable/ic_location"
                    android:drawableTint="@color/colorPrimary"
                    android:text="West DhanMondi, Sankar,Dhanmondi,Dhaka-1204"
                    android:textColor="#212121"
                    android:textSize="@dimen/small_text_size" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>